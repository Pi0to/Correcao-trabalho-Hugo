
#include <stdio.h>

int main() {
    
    int num, num1, num2, i = 0;
    
    printf ("Digite três números inteiros: ");
        scanf ("%d %d %d", &num, &num1, &num2);
    
    
    if (num >= 100) {i++;}
    
    if (num1 >= 100) {i++;}
   
    if (num2 >= 100) {i++;}
    
    switch (i){
        
        case 0:
            printf ("Nenhum numero é maior que 100.");
        break;
        
        case 1:
            printf ("Apenas um numero é maior que 100.");
        break;
        
        case 2:
            printf ("Dois numeros sao maiores que 100.");
        break;
        
        case 3:
            printf ("Os tres numeros sao maiores que 100.");
        break;    
    }
    
   
    return 0;
}
